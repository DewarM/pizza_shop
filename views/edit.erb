<form action="/pizzas/<%= @id %>" autocomplete="off" method="POST">
  <ul>
    <li>
      <label for="first_name">First Name</label>
      <input id="first_name" name="first_name" type="text" placeholder="First Name" value="<%= @pizza.first_name %>">
    </li>

    <li>
      <label for="last_name"> Last Name</label>
      <input id="last_name" name="last_name" type="text" placeholder="Last Name" value="<%= @pizza.last_name %>">
    </li>

    <li>
      <label for="pizza_select">Topping:</label>
      <select id="pizza_select" name="topping">
        <option value="Margherita"
        <%= "selected" if @pizza.topping == "Margherita" %>
        >Margherita</option>
        <option value="Italian Sausage"
        <%= "selected" if @pizza.topping == "Italian Sausage" %>
        >Italian Sausage</option>
        <option value="Pepperoni"
        <%= "selected" if @pizza.topping == "Pepperoni" %>
        >Pepperoni</option>
      </select>
    </li>

    <li>
      <label for="quantity">How many?</label>
      <input id="quantity" type="number" name="quantity" value="<%= @pizza.quantity %>" min="1">
    </li>

    <input class="button" type="submit" value="Update Pizza">

  </ul>
</form>
